##########################
# Portas dos serviços
##########################
# Core
PORT_SAFIRA=5678      # n8n principal
PORT_ADMIN=5680       # n8n admin
PORT_OLLAMA=11434
PORT_VENOM=3001
PORT_CSM=5050
PORT_STT=9000
PORT_AI_FUN=8800
PORT_IMG_READER=6001
PORT_IMG_GEN=6002

# Dados & Storage
PORT_MINIO_API=9000
PORT_MINIO_CONSOLE=9001
PORT_REDIS=6379
PORT_PG_SAFIRA=5432
PORT_PG_PAGAMENTO=5433
PORT_PG_JIRA=5434

# Observabilidade
PORT_GRAFANA=3000
PORT_PROMETHEUS=9090
PORT_LOKI=3100

# Gateway / Traefik
PORT_TRAEFIK_HTTP=80
PORT_TRAEFIK_HTTPS=443

# DevOps / CI
PORT_JENKINS_WEB=8081
PORT_JENKINS_AGENT=50000
PORT_SPARK_MASTER=7077
PORT_SPARK_UI=8088

# Utilidades
PORT_FILEMAN=8080
PORT_DOCS=8008
PORT_BACKUP=9009


# ───── WAHA – WhatsApp HTTP API ─────
PORT_WAHA=3001
WHATSAPP_HOOK_URL=http://safira:5678/webhook/whats
WHATSAPP_HOOK_EVENTS=*
WHATSAPP_START_SESSION=default


##########################
# Credenciais públicas (NÃO são segredos)
##########################
POSTGRES_USER=postgres        # usuário padrão de todos os bancos
MINIO_ROOT_USER=minio         # usuario root do MinIO
TZ=America/Sao_Paulo          # timezone default
TRAEFIK_LOG_LEVEL=INFO        # (DEBUG | INFO | WARN)

##########################
# Ajustes de saúde / logs
##########################
# Porta usada pelos health‑checks HTTP genéricos nos serviços scaffold
HEALTH_PORT=8000

# Nível de log global (json‑file driver)
LOG_MAX_SIZE=10m              # usado no x-logging se quiser parametrizar
LOG_MAX_FILE=3

